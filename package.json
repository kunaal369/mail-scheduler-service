{
  "name": "mail-scheduler-service",
  "version": "1.0.0",
  "description": "Production-ready Email Scheduling API with PostgreSQL, Redis, and BullMQ",
  "main": "src/server.js",
  "scripts": {
    "dev": "node src/server.js",
    "worker": "node src/jobs/email.worker.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "email",
    "scheduler",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bullmq": "^5.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "@sendgrid/mail": "^7.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.js"
    ]
  }
}

